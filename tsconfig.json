{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx",

    "baseUrl": ".",
    "paths": {
      "~/*": ["*"],
      "@app/*": ["app/*"],
      "@features/*": ["features/*"],
      "@components/*": ["components/*"],
      "@lib/*": ["lib/*"],
      "@providers/*": ["providers/*"],
      "@styles/*": ["styles/*"],
      "@utils/*": ["utils/*"],
      "@types/*": ["types/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "lib/appwrite.ts",
    "context/AuthContext.js"
  ]
}
